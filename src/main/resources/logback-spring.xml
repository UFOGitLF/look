<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springboot.sample" level="TRACE"/>

    <!--Kafka-->
    <appender name="Kafka" class="com.fly.common.logback.LogbackAppender">
        <buildStrategy class="com.fly.common.logback.KafkaBuildStrategy">
            <config class="com.fly.common.logback.KafkaConfig">
                <addresses>172.93.33.78:9092</addresses>
                <topic>topic1</topic>
            </config>
        </buildStrategy>
        <deliveryStrategy
                class="com.fly.common.logback.AsynchronousDeliveryStrategy"/>
        <source>test-application</source>
    </appender>

    <!-- 开发、测试环境 -->
    <springProfile name="dev,test">
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="org.springboot.sample" level="INFO"/>
        <logger name="com.fly" level="DEBUG"/>
    </springProfile>

    <!-- 生产环境 -->
    <springProfile name="prod">
        <logger name="org.springframework.web" level="ERROR"/>
        <logger name="org.springboot.sample" level="ERROR"/>
        <logger name="com.fly" level="ERROR"/>
    </springProfile>

</configuration>